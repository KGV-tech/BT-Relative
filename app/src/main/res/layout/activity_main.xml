<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Tx1"
        android:layout_centerInParent="true"
        android:background="#F70626"
        android:textSize="30dp"
        android:text="1"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp"/>
    <TextView
        android:background="#2A9545"
        android:textSize="30dp"
        android:text="2"
        android:layout_toStartOf="@id/Tx1"
        android:layout_above="@id/Tx1"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp"/>
    <TextView
        android:background="#B7AB33"
        android:textSize="30dp"
        android:text="3"
        android:layout_toStartOf="@id/Tx1"
        android:layout_below="@id/Tx1"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp"/>
    <TextView
        android:background="#97156F"
        android:textSize="30dp"
        android:text="4"
        android:layout_toEndOf="@id/Tx1"
        android:layout_above="@id/Tx1"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp"/>
    <TextView
        android:background="#8F625C"
        android:textSize="30dp"
        android:text="5"
        android:layout_toEndOf="@id/Tx1"
        android:layout_below="@id/Tx1"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp"/>
    <TextView
        android:background="#946A30"
        android:textSize="30dp"
        android:text="6"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp"/>
    <TextView
        android:background="#47DAAE"
        android:textSize="30dp"
        android:text="7"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp"/>
    <TextView
        android:background="#224D82"
        android:textSize="30dp"
        android:text="8"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp"/>
    <TextView
        android:background="#EB992B"
        android:textSize="30dp"
        android:text="9"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp"/>

</RelativeLayout>